<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#CDC2B7"
    android:background="@drawable/rounded_border"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/ll_LayoutOrder1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Code Bill: "
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_BillCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="198341245"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_LayoutOrder2"
        android:layout_below="@id/ll_LayoutOrder1"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Foods: "
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_LstFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="char lua, gio heo, hoa cai,"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_LayoutOrder3"
        android:layout_below="@id/ll_LayoutOrder2"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Date: "
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_DateOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/01/20032"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_LayoutOrder4"
        android:layout_below="@id/ll_LayoutOrder3"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_OrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting"
            android:textColor="#EA9A8B"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_LayoutOrder5"
        android:layout_below="@id/ll_LayoutOrder4"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sum Price: "
            android:textColor="@color/text"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_SumPriceOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200988VND"
            android:textColor="#EA9A8B"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>