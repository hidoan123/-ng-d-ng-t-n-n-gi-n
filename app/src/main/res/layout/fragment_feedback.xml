<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FeedbackFragment"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/text"
            android:text="@string/title_name_feedback"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:hint="Enter your name"
            android:background="@color/feedback_text"
            android:textSize="20sp"
            android:id="@+id/edt_YourName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/text"
            android:text="@string/title_email_feedback"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:hint="Enter your email"
            android:background="@color/feedback_text"
            android:textSize="20sp"
            android:id="@+id/edt_Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:textColor="@color/text"
            android:text="@string/title_content_feedback"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:textAlignment="textStart"
            android:id="@+id/edt_Content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
           android:layout_marginTop="5dp"
            android:background="@color/feedback_text"
            android:hint="Enter content"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>
    <Button
        android:textColor="@color/black"
        android:text="@string/button_sent_feedback"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>